<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% if user.role == "Barber" %>
      <tr>
        <td><%= link_to user.first_name, user %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

